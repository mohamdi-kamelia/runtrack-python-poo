class Tache:
    def __init__(self, titre, description, statut="À faire"):
        self.titre = titre
        self.description = description
        self.statut = statut

    def afficher_details(self):
        return f"{self.titre} - {self.description} - Statut : {self.statut}"


class ListeDeTaches:
    def __init__(self):
        self.taches = []

    def ajouterTache(self, tache):
        self.taches.append(tache)
        print(f"Tâche '{tache.titre}' ajoutée avec succès.")

    def supprimerTache(self, titre):
        taches_restantes = [tache for tache in self.taches if tache.titre != titre]
        if len(taches_restantes) < len(self.taches):
            print(f"Tâche '{titre}' supprimée avec succès.")
        else:
            print(f"Tâche '{titre}' non trouvée.")
        self.taches = taches_restantes

    def marquerCommeFinie(self, titre):
        for tache in self.taches:
            if tache.titre == titre:
                tache.statut = "Terminée"
                print(f"Tâche '{titre}' marquée comme terminée.")
                return
        print(f"Tâche '{titre}' non trouvée.")

    def afficherListe(self):
        for tache in self.taches:
            print(tache.afficher_details())

    def filterListe(self, statut):
        taches_filtrees = [tache for tache in self.taches if tache.statut == statut]
        return taches_filtrees


# Test du code
tache1 = Tache("Faire les courses", "Acheter du lait et du pain")
tache2 = Tache("Réviser pour l'examen", "Relire les chapitres 1 à 3")
tache3 = Tache("Nettoyer la maison", "Passer l'aspirateur et faire la vaisselle")

liste_taches = ListeDeTaches()
liste_taches.ajouterTache(tache1)
liste_taches.ajouterTache(tache2)
liste_taches.ajouterTache(tache3)

print("\nAffichage de la liste des tâches:")
liste_taches.afficherListe()

liste_taches.marquerCommeFinie("Faire les courses")

print("\nAffichage de la liste des tâches après marquage comme terminée:")
liste_taches.afficherListe()

print("\nAffichage des tâches à faire:")
taches_a_faire = liste_taches.filterListe("À faire")
for tache in taches_a_faire:
    print(tache.afficher_details())
